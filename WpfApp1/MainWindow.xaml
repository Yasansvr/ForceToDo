<Window x:Name="main_window" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height="450" Width="800" Icon="/ICON.png" Background="#FF292929">
    <Border >
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <Label x:Name="title" Content="FORCE TODO"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0 0 0 30" Background="{x:Null}" Foreground="White" FontFamily="Franklin Gothic Medium"/>

                <TextBlock x:Name="texty" Text="What do you want to do today ?"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10" Foreground="White" FontFamily="Microsoft JhengHei"/>

                <TextBox x:Name="input1"
                 Width="200"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center"
                 Height="25"
                 Margin="0 0 0 10" Opacity="0.5" Cursor="IBeam" FontFamily="OCR A Extended" TextAlignment="Center" Foreground="Black" FontWeight="Bold"/>

                <Button Content="ADD TO LIST"
                Width="120"
                Height="28"
                Background="#FF959595"
                Click="Button_Click"
                Margin="0 0 0 20" Foreground="White" FontFamily="Segoe UI Variable Display Semilight" FontWeight="Bold"/>

                <!-- ⭐ This is where the RadioButtons will be added -->
                <StackPanel x:Name="TasksPanel"
                    HorizontalAlignment="Center"/>
                <StackPanel x:Name="clearbt"
                HorizontalAlignment="Center"/>
                <StackPanel x:Name="clearItem"
                HorizontalAlignment="Center"/>

            </StackPanel>

            <Button x:Name="dayn" Content="Light" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="37" Click="Button_Click_1"/>


        </Grid>
    </Border>
</Window>
