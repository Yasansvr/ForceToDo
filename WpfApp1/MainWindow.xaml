<Window x:Name="main_window" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ForceToDo" Height="450" Width="800" Icon="/ICON.png">
    <Window.Background>
        <ImageBrush ImageSource="/360_F_717592756_9Og1qwy7XosLJmeECDQKaFVLjsJc2qJW.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label Content="FORCE TODO"
               FontSize="28"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0 0 0 30" Background="{x:Null}" Foreground="White" FontFamily="OCR A Extended"/>

            <TextBlock Text="What do you want to do today ?"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10" Background="#FF470065" Foreground="White" FontFamily="OCR A Extended"/>

            <TextBox x:Name="input1"
                 Width="200"
                 Height="25"
                 Margin="0 0 0 10" Opacity="0.5" Cursor="IBeam" FontFamily="OCR A Extended" TextAlignment="Center" Foreground="Black" FontWeight="Bold"/>

            <Button Content="ADD TO LIST"
                Width="120"
                Height="28"
                Background="#FFB600F7"
                Click="Button_Click"
                Margin="0 0 0 20" BorderBrush="#FFB600F7" Foreground="White" FontFamily="Franklin Gothic Heavy" FontWeight="Bold"/>

            <!-- ⭐ This is where the RadioButtons will be added -->
            <StackPanel x:Name="TasksPanel"
                    HorizontalAlignment="Center"/>
            <StackPanel x:Name="clearbt"
                HorizontalAlignment="Center"/>
            <StackPanel x:Name="clearItem"
                HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
